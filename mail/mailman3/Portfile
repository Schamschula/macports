# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           python 1.0

set real_name       mailman
name                ${real_name}3
version             3.3.8
revision            0
categories-append   mail

license             GPL-3+
maintainers         {mps @Schamschula} openmaintainer
description         Mailman, the GNU Mailing List Manager
long_description    Mailman is free software for managing electronic \
                    mail discussion and e-newsletter lists. Mailman is \
                    integrated with the web, making it easy for users \
                    to manage their accounts and for list owners to \
                    administer their lists. Mailman supports built-in \
                    archiving, automatic bounce processing, content \
                    filtering, digest delivery, spam filters, and more.
supported_archs     noarch
platforms           {darwin any}
homepage            http://www.list.org/
master_sites        pypi:m/mailman
distfiles           ${real_name}-${version}${extract.suffix}

conflicts           mailman

checksums           rmd160  81bf1a4192c9e4ff6a5fdd6f76857ceb63b9283e \
                    sha256  83ac07ee55ea2b4c89f00c4ed4717132f06270127d3465a53de3c5cb197d41ce \
                    size    1676901

worksrcdir          ${real_name}-${version}

variant python38 conflicts python311 python39 python310 description {Use Python 3.8} {}
variant python39 conflicts python311 python38 python310 description {Use Python 3.9} {}
variant python310 conflicts python311 python38 python39 description {Use Python 3.10} {}
variant python311 conflicts python38 python39 python310 description {Use Python 3.11} {}

if {![variant_isset python38] && ![variant_isset python39] && ![variant_isset python310]} {
    default_variants +python311
}

foreach pv {311 310 39 38} {
    if {[variant_isset python${pv}]} {
        python.default_version ${pv}
        break
    }
}

depends_lib-append  port:py${python.version}-setuptools \
                    port:py${python.version}-whoosh

livecheck.type      regex
livecheck.url       ${homepage}
livecheck.regex     "${real_name} (\[0-9.\]+)"
