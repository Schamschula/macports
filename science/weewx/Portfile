PortSystem          1.0
PortGroup           python 1.0

name                weewx
version             4.3.0
revision            0
categories          science
license             GPL-3
maintainers         {mps @Schamschula} openmaintainer
description         WeeWX is a free, open source, software program, written in Python, \
                    which interacts with your weather station to produce graphs, \
                    reports, and HTML pages.
long_description    ${description}
platforms           darwin
homepage            http://weewx.com
master_sites        ${homepage}/downloads/released_versions/

checksums           rmd160  4f30faf5e5fbb069d170d9185c85d86de1c04754 \
                    sha256  4e7b8bd6d50e3f1e1b3f5dfcf1c1595abac4f9c9a0c518a8eb3b15d32860caf4 \
                    size    1615365

variant python27 conflicts python36 python37 python38 python39 description {Use Python 2.7} {}
variant python37 conflicts python27 python36 python38 python39 description {Use Python 3.7} {}
variant python38 conflicts python27 python36 python37 python39 description {Use Python 3.8} {}
variant python39 conflicts python27 python36 python37 python38 description {Use Python 3.9} {}

if {![variant_isset python37] && ![variant_isset python39]} {
    default_variants +python38
}

foreach pv {39 38 37 27} {
    if {[variant_isset python${pv}]} {
        python.default_version ${pv}
        break
    }
}

depends_lib-append  port:py${python.version}-cheetah \
                    port:py${python.version}-configobj \
                    port:py${python.version}-ephem \
                    port:py${python.version}-Pillow \
                    port:py${python.version}-pyusb \
                    port:py${python.version}-setuptools \
                    port:py${python.version}-serial

patchfiles          patch-setup.cfg.diff \
                    patch-setup.py.diff

livecheck.type      regex
livecheck.url       ${master_sites}
livecheck.regex     ${name}-(\[0-9.\]+)${extract.suffix}
