# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           python 1.0

name                weewx
version             4.8.0
revision            0
categories          science
license             GPL-3
maintainers         {mps @Schamschula} openmaintainer
description         WeeWX is a free, open source, software program, written in Python, \
                    which interacts with your weather station to produce graphs, \
                    reports, and HTML pages.
long_description    {*}${description}
platforms           darwin
homepage            http://weewx.com
master_sites        ${homepage}/downloads/released_versions/

checksums           rmd160  dac5c1f5f29b1fe18b7bbaf1e8482dc9bb232975 \
                    sha256  6248c8071afcd03d22e7d5e5f3541bae7be834977717da0bcea56bb7e5d6808a \
                    size    1853039

variant python37 conflicts python36 python38 python39 python310 description {Use Python 3.7} {}
variant python38 conflicts python36 python37 python39 python310 description {Use Python 3.8} {}
variant python39 conflicts python36 python37 python38 python310 description {Use Python 3.9} {}
variant python310 conflicts python36 python37 python38 python39 description {Use Python 3.10} {}

if {![variant_isset python37] && ![variant_isset python38] && ![variant_isset python39]} {
    default_variants +python310
}

foreach pv {310 39 38 37} {
    if {[variant_isset python${pv}]} {
        python.default_version ${pv}
        break
    }
}

depends_lib-append  port:py${python.version}-cheetah \
                    port:py${python.version}-configobj \
                    port:py${python.version}-ephem \
                    port:py${python.version}-Pillow \
                    port:py${python.version}-pyusb \
                    port:py${python.version}-setuptools \
                    port:py${python.version}-pyserial

patchfiles          patch-setup.cfg.diff \
                    patch-setup.py.diff

post-patch {
    reinplace "s|%%PREFIX%%|${prefix}|g" ${worksrcpath}/setup.cfg
}

livecheck.type      regex
livecheck.url       ${master_sites}
livecheck.regex     ${name}-(\[0-9.\]+)${extract.suffix}
