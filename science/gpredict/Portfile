                    port:gettext \
                    port:intltool \
                    port:pkgconfig

depends_lib         port:curl \
                    port:goocanvas2 \
                    path:lib/pkgconfig/librsvg-2.0.pc:librsvg

depends_run         path:lib/libhamlib.dylib:hamlib

app.create          yes
