PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           python 1.0

name                postorius
version             1.3.2
revision            0
categories-append   www
license             GPL-3
maintainers         {mps @Schamschula} openmaintainer
description         The Postorius Django app provides a web user interface to access \
                    GNU Mailman.
long_description    ${description}
platforms           darwin
homepage            https://pypi.org/project/postorius/
master_sites        pypi:p/postorius

checksums           rmd160  220186d484102d4df9681e0d01cd53a74de907ae \
                    sha256  4a7af649e8ee1ef01ae6a8bfe3fdabcd1a13a35238c7febcc2a9faa31a043573 \
                    size    1735643

python.versions     36 37 38

depends_lib-append  port:py${python.version}-django \
                    port:py${python.version}-setuptools

variant python36 conflicts python37 python38 description {Use Python 3.6} {
    python.default_version 36
}

variant python37 conflicts python36 python38 description {Use Python 3.7} {
    python.default_version 37
}

variant python38 conflicts python36 python37 description {Use Python 3.8} {
    python.default_version 38
}

if {![variant_isset python36] && ![variant_isset python37] && ![variant_isset python38]} {
    default_variants +python38
}
