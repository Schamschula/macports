checksums           rmd160  3550b9dda3b29109a978a273892758d7f0950d31 \
                    sha256  54a329128ed1934451b6e3c26dd0a6adc7b2a48cc7f7606ad7454b61d0834f89 \
                    size    1610209

python.versions     36 37 38

