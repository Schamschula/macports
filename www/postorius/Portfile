PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           python 1.0

name                postorius
version             1.3.5
revision            0
categories-append   www
license             GPL-3
maintainers         {mps @Schamschula} openmaintainer
description         The Postorius Django app provides a web user interface to access \
                    GNU Mailman.
long_description    {*}${description}
platforms           darwin
homepage            https://pypi.org/project/postorius/
master_sites        pypi:p/postorius

checksums           rmd160  14817ba7e5e4872e90b495cdce152e792412cc1b \
                    sha256  0f23c6542bf0f6e6364d678c094ee5804acfe59ecbcc0e944bc4c13834e24e80 \
                    size    2775722

variant python37 conflicts python36 python38 python39 description {Use Python 3.7} {}
variant python38 conflicts python36 python37 python39 description {Use Python 3.8} {}
variant python39 conflicts python36 python37 python38 description {Use Python 3.9} {}

if {![variant_isset python37] && ![variant_isset python38]} {
    default_variants +python39
}

foreach pv {39 38 37} {
    if {[variant_isset python${pv}]} {
        python.default_version ${pv}
        break
    }
}

depends_lib-append  port:py${python.version}-django \
                    port:py${python.version}-setuptools
