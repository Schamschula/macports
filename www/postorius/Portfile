PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           python 1.0

name                postorius
version             1.2.4
revision            0
categories-append   www
license             GPL-3
maintainers         {mps @Schamschula} openmaintainer
description         The Postorius Django app provides a web user interface to access \
                    GNU Mailman.
long_description    ${description}
platforms           darwin
homepage            https://pypi.org/project/postorius/
master_sites        pypi:p/postorius

checksums           rmd160  b2b4240f9767afda208e802b4bb4ed763d681e66 \
                    sha256  d4a52727079cd32e134a8aa741325dafb48a4303a815f762e388baceb4a5429c \
                    size    451043

python.versions     36 37

depends_lib-append  port:py${python.version}-django \
                    port:py${python.version}-setuptools

variant python36 conflicts python37 description {Use Python 3.6} {
    python.default_version 36
}

variant python37 conflicts python36 description {Use Python 3.7} {
    python.default_version 37
}

if {![variant_isset python36] && ![variant_isset python37]} {
    default_variants +python37
}
