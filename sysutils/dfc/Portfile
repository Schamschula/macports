                    sha256  8ad98ba1a9685a1bf33a2d3b8f2737dedef6019543d19d1b5ebd1783be740feb

depends_lib         port:gettext \
                    port:libiconv

livecheck.type      regex
livecheck.url       ${homepage}/files
livecheck.regex     "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
