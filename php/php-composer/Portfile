# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                php-composer
version             2.0.12
revision            0
categories          php
license             MIT
maintainers         {mps @Schamschula} openmaintainer
description         Composer is a tool for dependency management in PHP.
long_description    ${description} It allows you to declare the libraries your project \
                    depends on and it will manage (install/update) them for you.
platforms           darwin
homepage            https://getcomposer.org/
master_sites        ${homepage}
distfiles           installer

checksums           installer \
                    rmd160  7c6ff6afcd3058e032e24c12de7a7e2d876f261c \
                    sha256  0b9feb83e12e76edcad301c5d3e0a4fdde08bccc597c5e75d979d9bd8ab5c3c4 \
                    size    276215 

set php_branch      73

variant php71 conflicts php72 php73 php74description {Use Python 7.1} {
    set php_branch  71
}

variant php72 conflicts php71 php73 php74 description {Use Python 7.2} {
    set php_branch  72
}

variant php73 conflicts php71 php72 php74 description {Use Python 7.3} {}

variant php74 conflicts php71 php72 php73 description {Use Python 7.4} {
    set php_branch  74
}

if {![variant_isset php71] && ![variant_isset php72] && ![variant_isset php73] && ![variant_isset php74]} {
    default_variants +php73
}

depends_lib         port:php${php_branch} \
                    port:php${php_branch}-mbstring \
                    port:php${php_branch}-openssl

use_configure       no

extract {
    file copy ${distpath}/installer ${workpath}/composer-setup.php
}

build   {}

destroot {
    exec ${prefix}/bin/php${php_branch} ${workpath}/composer-setup.php \
        --install-dir=${destroot}${prefix}/bin --filename=composer
}

livecheck.type      regexm
livecheck.url       ${homepage}download/
livecheck.regex     {v(\d+\.\d+\.\d+)}
