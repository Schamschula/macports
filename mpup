
#!/bin/sh

##
#	mpup
#
#	1.2.0
#	2014210
##

# timestamp
echo Start $(date)
cd ~/Development/MacPorts/ports

# get latest from git (if there is a local tree)
ISGIT=$(git rev-parse --is-inside-work-tree)
if [ "$ISGIT" == "true" ]; then
    /opt/local/bin/git pull origin master
fi

# get latest fro MacPorts
sudo /opt/local/bin/port sync

# update
sudo /opt/local/bin/port upgrade outdated

# timestamp
echo Finish $(date)
