# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           cmake 1.0
PortGroup           github 1.0
PortGroup           qt5 1.0

github.setup        Faster3ck converseen 0.9.9.3 v
revision            0
categories          graphics
license             GPL-3
maintainers         {mps @Schamschula} openmaintainer
description         Converseen is an open source batch image converter and resizer.
long_description    {*}${description} Thanks to the Magick++ image libraries it supports \
                    more than 100 image formats.
platforms           darwin

checksums           rmd160  b3fc087b2cec355616f0c4d04d5851c6cc34f611 \
                    sha256  e8026465d3fad3828e3f05ec2024b0b63319c7d34ead8ae93d695e25120d5142 \
                    size    288205

depends_lib-append  port:ImageMagick \
                    port:qt5-qttools

post-patch {
    reinplace "s|/usr/share|\${CMAKE_INSTALL_PREFIX}/share|g" ${worksrcpath}/CMakeLists.txt
}

post-destroot {
    # create stub App
    set appdir ${destroot}${applications_dir}/Converseen.app
    xinstall -d ${appdir}/Contents/MacOS
    xinstall -d ${appdir}/Contents/Resources

    xinstall -m 644 ${filespath}/Info.plist ${appdir}/Contents/
    xinstall -m 644 ${filespath}/Converseen.icns ${appdir}/Contents/Resources/
    xinstall -m 755 ${filespath}/Converseen ${appdir}/Contents/MacOS

    reinplace -W ${appdir}/Contents "s,@@VERSION@@,${version},g" Info.plist
    reinplace -W ${appdir}/Contents/MacOS "s,@@PREFIX@@,${prefix},g" Converseen
}
