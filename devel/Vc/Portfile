                    sha256  a4e5c5d7b51b4b04e6ef87e28a5b8b0108c9788739b044f96fb64f274d249063

configure.args      -DBUILD_TESTING=OFF ${worksrcpath}
configure.dir       ${worksrcpath}/build

pre-configure {
    file mkdir ${configure.dir}
}

build.args          -j16
build.dir           ${configure.dir}
