PortSystem          1.0
PortGroup           python 1.0
PortGroup           github 1.0

github.setup        pfnet chainer 1.0.0 v
name                py-chainer
revision            1
maintainers         hum openmaintainer
license             MIT
supported_archs     noarch

description         A flexible framework of neural networks
long_description    ${description}

homepage            http://chainer.org/
platforms           darwin

python.versions     27

if {${name} ne ${subport}} {
    checksums           rmd160  35d1698023c20d6fc40ae2e68901320c8dd05ca4 \
                        sha256  03249ee877ea715c20027db08e3a68d66ee678aae72b0cfe9c283d979d8147e9

    depends_lib-append  port:py${python.version}-numpy \
                        port:py${python.version}-scikit-learn

    post-destroot {
        # install additional documents
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -W ${worksrcpath} \
            LICENSE README.md \
            ${destroot}${docdir}
        # install examples
        copy ${worksrcpath}/examples ${destroot}${docdir}/${subport}
    }

    livecheck.type      none
}
