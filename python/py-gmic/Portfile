                    port:py${python.version}-pytest \
                    port:py${python.version}-pytest-xdist

    patch.dir       ${build.dir}
    patchfiles      patch-setup.py.diff

    post-patch {
        reinplace "s|%PREFIX%|${prefix}|g" ${build.dir}/setup.py
        copy        ${workpath}/gmic-${gmic_version}/src/gmic.cpp ${build.dir}
    }

    livecheck       none
