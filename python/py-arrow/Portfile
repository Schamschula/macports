    depends_run-append \
                    port:py${python.version}-dateutil \
                    port:py${python.version}-types-python-dateutil

    post-destroot {
        xinstall -d ${destroot}${prefix}/share/doc/${subport}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.rst LICENSE \
