PortSystem          1.0
PortGroup           github 1.0
PortGroup           python 1.0

github.setup        Calysto octave_kernel 0.27.1 v
set real_name       octave_kernel
name                py-${real_name}
license             BSD-3-Clause
maintainers         {mps @Schamschula} openmaintainer
description         A Jupyter kernel for Octave
long_description    ${description}
platforms           darwin

checksums           rmd160  c9437b9603ab0519cad4a65eb45a293b7b404903 \
                    sha256  ba30e740e9bbaf872e15b6d763171479527504efd7e6e310610b03854865a184

python.versions     27 34 35 36

if {${name} ne ${subport}} {
    depends_lib-append  \
                    port:octave \
                    port:py${python.version}-metakernel

# Install as root (however, we don't run notebook as root...)
