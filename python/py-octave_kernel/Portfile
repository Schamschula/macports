# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           python 1.0

github.setup        Calysto octave_kernel 0.28.0 v
set real_name       octave_kernel
name                py-${real_name}
license             BSD-3-Clause
maintainers         {mps @Schamschula} openmaintainer
description         A Jupyter kernel for Octave
long_description    ${description}
platforms           darwin

checksums           rmd160  e6fcfaa5d7f901e1a62140765f69ba12ae1260d6 \
                    sha256  381fbc6c5319b57ebfeca04cb775ba8659b8dd746bfbe0e9a4e009ea5f454ea6

python.versions     27 34 35 36

if {${name} ne ${subport}} {
    depends_lib-append  \
                    port:octave \
                    port:py${python.version}-metakernel

notes "
************************************************************
In order for py-notebook to access octave_kernel,
octave_kernel needs to install some files in each user's
~/Library folder:

${prefix}/bin/python${python.branch} -m octave_kernel install --user
************************************************************
"
}
