PortSystem          1.0
PortGroup           github 1.0
PortGroup           python 1.0

github.setup        Calysto octave_kernel 0.26.0 v
revision            1
set real_name       octave_kernel
name                py-${real_name}
license             Modified BSD
maintainers         {mps @Schamschula} openmaintainer
description         A Jupyter kernel for Octave
long_description    ${description}
platforms           darwin

checksums           rmd160  d4a06df1faf155f318ea72d3c5f316c784e68c9b \
                    sha256  0b2b21ab7a34efb741283c833476d22bb731486d82ff5517fe3fb6bddaae0da2

python.versions     27 34 35 36

if {${name} ne ${subport}} {
    depends_lib-append  \
                    port:octave \
                    port:py${python.version}-metakernel
    
    post-destroot {
        exec ${prefix}/bin/python${python.branch} \
        ${destroot}${prefix}/Library/Frameworks/Python.framework/Versions/${python.branch}/lib/python${python.branch}/site-packages/octave_kernel/install.py \
        --prefix ${destroot}${prefix}
    }
}
