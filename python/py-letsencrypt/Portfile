PortSystem          1.0
PortGroup           github 1.0
PortGroup           python 1.0

github.setup        letsencrypt letsencrypt 0.5.0 v
name                py-letsencrypt
categories-append   security
license             Apache-2
maintainers         gmail.com:mschamschula openmaintainer
description         An ACME Let's Encrypt client that can obtain certs and extensibly \
                    update server configurations.
long_description    ${description}
platforms           darwin
homepage            https://letsencrypt.org/

python.versions     27 34 35
python.default_version \
                    27

checksums           rmd160  882343d7e4327269ff33129611688e1b643f9f3b \
                    sha256  79263c534c40c66fb417696379daf6ae3ccbd880810c699d6995645d2936e44c

if {${name} ne ${subport}} {
    depends_lib-append  \
                    port:py${python.version}-acme \
                    port:py${python.version}-configargparse \
                    port:py${python.version}-configobj \
                    port:py${python.version}-cryptography \
                    port:py${python.version}-mock \
                    port:py${python.version}-openssl \
                    port:py${python.version}-parsedatetime \
                    port:py${python.version}-psutil \
                    port:py${python.version}-rfc3339 \
                    port:py${python.version}-six \
                    port:py${python.version}-tz \
                    port:py${python.version}-zopecomponent

    if {${python.version} eq 27} {
        depends_lib-append  port:py${python.version}-python2-pythondialog
    }
}
post-patch {
    reinplace "s|/etc/|${prefix}/etc/|" ${worksrcpath}/letsencrypt/constants.py
    reinplace "s|/var/lib/|${prefix}/var/db/|" ${worksrcpath}/letsencrypt/constants.py
}
